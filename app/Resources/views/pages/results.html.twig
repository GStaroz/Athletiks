{% extends 'base.html.twig'%}

{% block body %}
    <h1>RESULTATS DES COURSES MAGUEULE</h1>
    <div class="container">
        
            {% for event in events %}
                <div class ="col-xs-12 col-sm-6 col-md-3 col-lg-2">
                    <h4 class="text-center">{{ event.name }}</h4>
                    <ul class="list-group">
                        <li class="list-group-item-heading">Coureur<span class="badge">points</span></li>
                        {% for resultat in results %}
                        <li class="list-group-item">{{resultat.athlete.firstname}}<span class="badge pull-right">{{resultat.points}}</span></li>
                        {%endfor%}
                    </ul>
                    
                </div>
            {% endfor %}
        
    </div>
    
{% endblock %}